{
  "name": "shadow-accord-monorepo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start:core": "npm start --workspace=core",
    "start:electron": "npm start --workspace=electron-app",
    "build:core": "npm run build --workspace=core",
    "build:electron": "npm run build --workspace=electron-app",
    "dist:electron": "npm run dist --workspace=electron-app",
    "start:capacitor": "npm start --workspace=capacitor-app"
  },
  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3",
    "react-scripts": "^5.0.0"
  }
}